            <% if signed_in? %>
              <li id="fat-menu" class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                  My Events <b class="caret"></b>
                </a>
                <ul class="dropdown-menu">
                  <li><%= link_to 'My Events', "/events/show", 'data-no-turbolink' => true %></li>
                  <li><%= link_to "Add Events", '/events' %></li>
                  <li>
                  </li>
                </ul>
              </li>
              <li id="fat-menu" class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                  Account <b class="caret"></b>
                </a>
                <ul class="dropdown-menu">
                  <li><%= link_to "Profile", edit_user_path(session[:user_id]) %></li>
                  <li class="divider"></li>
                  <li><%= link_to "Sign out", signout_path %></li>                  
                  <li>
                  </li>
                </ul>
              </li>
            <% else %>
            <li>
                <%= form_for :session, url: sessions_path, html: { class: "form-inline"} do |f| %>
                <div class="form-group">
		<%= f.label :email, class: 'sr-only' %>
                <%= f.text_field :email, :placeholder => "Email Address", class: 'form-control' %>
		</div>
		<div class="form-group">
		<%= f.label :password_field, class: 'sr-only' %>
                <%= f.password_field :password, :placeholder => "Password", class: 'form-control' %>
		</div>
                <%= f.submit "Sign in", class: "btn btn-small btn-primary" %>
                <a href="/auth/facebook" id="sign_in" class="btn fbicon"><%= image_tag "fb.png", :width => '30px' %></a>
                <% end %>
            </li>
            <% end %>          

